{% extends 'base.html.twig' %}

{% block title %}Company{% endblock %}

{% block body %}

    <div class="container emp-profile">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    {% set logo_url = company.imageName ? 'images/profil_company/'~company.imageName : 'img/WWJ.png' %}
                    <img src="{{ asset(logo_url) }}" alt=""/>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        {{ company.name }}
                    </h5>
                    <h6>
                        {{ company.type }}
                    </h6>

                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="description-tab" data-toggle="tab" href="#description"
                               role="tab"
                               aria-controls="description" aria-selected="true">Description</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="infos-tab" data-toggle="tab" href="#infos" role="tab"
                               aria-controls="infos" aria-selected="false">Infos</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-2">
                <a href="{{ path('company_edit') }}" class="btn btn-primary">Éditer</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-work">
                    <p><h6>Les offres</h6></p>
                    {% for offer in company.offers %}
                        <a href="{{ path('offer_show', {'id':offer.id}) }}">{{ offer.title }}</a>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                        <div class="row">
                            <div class="col-12">
                                <p>{{ company.description }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="infos" role="tabpanel"
                         aria-labelledby="infos-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>SIRET</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ company.siret }} </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Téléphone</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ company.phone }} </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Email</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ company.email }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Adresse postale</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    {{ company.address1 }}
                                    {{ company.address2 }}<br>
                                    {{ company.zipcode }} {{ company.city }}
                                    {{ company.country|upper }}
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
