{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <h1>Formation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>FormationName</th>
                <td>{{ formation.formationName }}</td>
            </tr>
            <tr>
                <th>Diploma</th>
                <td>{{ formation.diploma }}</td>
            </tr>
            <tr>
                <th>Domain</th>
                <td>{{ formation.domain }}</td>
            </tr>
            <tr>
                <th>BeginDate</th>
                <td>{{ formation.beginDate ? formation.beginDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ formation.endDate }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ formation.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('formation_index') }}">back to list</a>

    <a href="{{ path('formation_edit', {'id': formation.id}) }}">edit</a>

    {{ include('formation/_delete_form.html.twig') }}
{% endblock %}
